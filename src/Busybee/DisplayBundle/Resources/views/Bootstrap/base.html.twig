{# app/Resources/BusybeeDisplayBundle/views/Default/base.html.twig #}

{% trans_default_domain "BusybeeDisplayBundle" %}

<!DOCTYPE html>
<html lang="en">
	{% block head %}
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
		<meta name="description" content="Busybee is all about managing your school or Training centre, via families, students and staff.">
		<meta name="author" content="Craig Rayner - Hill Range Services">
		<title>{% block title %}Busybee - {% endblock title %}</title>
		{% block stylesheets %}

			{% stylesheets 
						'bundles/busybeedisplay/bootstrap/css/bootstrap.min.css' 
						'bundles/busybeedisplay/bootstrap/css/bootstrap-theme.min.css'
						'bundles/busybeedisplay/bootstrap/css/bootstrap-submenu.min.css'
					filter='cssrewrite' %}
				<link rel="stylesheet" href="{{ asset_url }}" />
			{% endstylesheets %}

		{% endblock stylesheets %}
		
		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		<!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
		<!--[if lt IE 9]><script src="{{ asset('bundles/busybeedisplay/js/ie8-responsive-file-warning.js') }}"></script><![endif]-->
		<script src="{{ asset('bundles/busybeedisplay/js/ie-emulation-modes-warning.js') }}"></script>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

		<link rel="icon" type="image/x-icon" href="{{ asset('bundles/busybeedisplay/images/favicon.ico') }}" />
	</head>
	{% endblock head %}
<body>

{% block navigation %}
{% include "BusybeeDisplayBundle:Menu:main-menu.html.twig" %}			
{% endblock navigation %}

{% block header %}{% endblock header %}
{% block container %}{% endblock container %}

{% block footer %}
<footer class="footer">
	<div class="container">
			<p>&copy; Hill Range Services 2015 - 2016
			{% if is_granted('ROLE_PREVIOUS_ADMIN') %}
				&nbsp:&nbsp;<a href="{{ path('busybee_home_page', {'_switch_user': '_exit'}) }}">Exit Impersonation of:  {{ app.user.username }}</a>
			{% elseif is_granted('ROLE_USER') %}
				&nbsp:&nbsp;<a href="{{ path('busybee_security_logout') }}" target="_self">{{ 'Sign Out'|trans }}: {{ app.user.username }}</a>
			{% endif %}
			</p>
	</div>
</footer>
{% endblock footer %}


{% block javascripts %}

<!-- Bootstrap core JavaScript  BusybeeDisplayBundle::base.html.twig
================================================== -->

{% javascripts
		'bundles/busybeedisplay/jquery/jquery.min.js'
		'bundles/busybeedisplay/bootstrap/js/bootstrap.min.js'
		'bundles/busybeedisplay/bootstrap/js/bootstrap-submenu.js'
		 %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

<script type="text/javascript">
	$(document).ready(function () {
		$('[data-toggle="tooltip"]').tooltip();
		$('[data-toggle="popover"]').popover();
	});
</script>

{% endblock javascripts %}
	</body>
</html>
