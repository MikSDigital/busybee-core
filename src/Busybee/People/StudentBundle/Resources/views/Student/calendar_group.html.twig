{% trans_default_domain "BusybeeStudentBundle" %}

{% extends "@BusybeeTemplate/Default/template.html.twig" %}

{% form_theme form
    "@BusybeeTemplate/Template/bootstrap.html.twig" %}

{% block headerTitle %}{{ 'student.calendar.group.students.title'|trans({'%name%': manager.calendarGroup.fullName}) }}{% endblock headerTitle %}
{% block headerLead %}{{ 'student.calendar.group.students.description'|trans }}{% endblock headerLead %}

{% set links = '' %}

{% block stylesheets %}
    {{ parent() }}
    {% include '@BusybeeTemplate/Toggle/style.html.twig' %}
{% endblock %}


{% block contentContainer %}
    {% set title = 'student.calendar.group.students.title' %}
    {% set panelParagraph = 'student.calendar.group.students.help' %}
    {% set transDomain = 'BusybeeStudentBundle' %}
    {{ form_start(form) }}
    {% set name = manager.calendarGroup.fullName %}
    {% include '@BusybeeTemplate/Page/panelStart.html.twig' %}
    <div id="gradeMessage"><!-- Messages go here --></div>
    <div class="row">
        <div class="col-sm-6 well" id="links">
            <!-- -->
        </div>
        <div class="col-sm-6 well">
            {{ form_row(form.defaultStatus) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 well" id="dropRemove">
            {% include '@BusybeeStudent/Student/removeStudent.html.twig' %}
        </div>
        <div class="col-sm-6 well" id="dropAttach">
            {% include '@BusybeeStudent/Student/addStudent.html.twig' %}
        </div>
    </div>
    {% include '@BusybeeTemplate/Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

    {% block javascripts %}
        {{ parent() }}
        {% include '@BusybeeTemplate/Toggle/script.html.twig' %}
        {% include '@BusybeeStudent/Student/calendar_group_script.html.twig' %}

    {% endblock %}