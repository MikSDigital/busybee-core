{# src/Busybee/People/FamilyBundle/Resources/views/Family/panelHeader.html.twig #}

{% trans_default_domain "BusybeeFamilyBundle" %}

{% if header is not defined %}
    {% set header = 'family.title.details' %}
{% endif %}
{% set transDomain = 'BusybeeFamilyBundle' %}
{% set h3Content = '' %}
{% set h3Content = h3Content ~ returnButton({title: 'family.return', transDomain: 'BusybeeFamilyBundle', 'windowOpen': {'route': path('family_manage') }})|raw %}
{% if id != 'Add' %}
    {% set h3Content = h3Content ~ addButton({title: 'family.title.add', transDomain: 'BusybeeFamilyBundle', 'windowOpen': {'route': path('family_edit', {'id': 'Add'}) }})|raw %}
{% endif %}
{% set h3Content = h3Content ~ resetButton({type: 'button', javascript: {function: 'resetFamily', options: []} })|raw %}
{% set h3Content = h3Content ~ saveButton()|raw %}
{% set panelParagraph = name %}
{% include '@BusybeeTemplate/Page/panelStart.html.twig' %}