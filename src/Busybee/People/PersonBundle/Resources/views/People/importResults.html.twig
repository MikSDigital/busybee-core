{# src/Busybee/PersonBundle/Resources/views/People/importResults.html.twig #}

{% trans_default_domain "BusybeePersonBundle" %}

{% extends "BusybeeTemplateBundle:Default:template.html.twig" %}

{% block title %}{{ parent() }}{{ 'people.importresults.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'people.importresults.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'people.importresults.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {% include '@BusybeeTemplate/Page/panelStart.html.twig' with {'header': 'people.importresults.title', 'transDomain': 'BusybeePersonBundle' } %}
    <div class="container-fluid">
        {% if results is not empty %}
            {% for stuff in results %}
                {% if stuff|length > 0 %}
                    {% for alert,message in stuff %}
                        {% if alert == 'success' %}
                            <div class="row alert alert-success fadeAlert">{{ message[0]|trans({'%data%': message[1]}) }}</div>
                        {% elseif alert == 'limit' %}
                            <form role="form" method="post">
                                <input type="hidden" name="import[file]" value="{{ import.file }}"/>
                                <input type="hidden" name="import[_token]" value="{{ import._token }}"/>
                                <input type="hidden" name="import[offset]" value="{{ message[1] }}"/>
                                {% for index,field in import.fields %}
                                    {% for name,value in field %}
                                        <input type="hidden" name="import[fields][{{ index }}][{{ name }}]"
                                               value="{{ value }}"/>
                                    {% endfor %}
                                {% endfor %}
                                <div class="alert alert-info row">
                                    <div class="col-sm-9">
                                        {{ message[0]|trans({'%data%': message[1]}) }}
                                    </div>
                                    <div class="col-sm-3">
                                        <button type="submit" class="btn btn-primary"
                                                style="float: right; margin-left: 5px;"
                                                title="{{ 'people.import.limit.numbers'|trans }}">{{ 'people.import.limit.reload'|trans }}</button>
                                    </div>
                                </div>
                            </form>
                        {% else %}
                            <div class="row alert alert-{{ alert }}">{{ message[0]|trans({'%data%': message[1]})|replace({'%newline%': '<br />'})|raw }}</div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>
    {% include '@BusybeeTemplate/Page/panelEnd.html.twig' %}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include 'BusybeeTemplateBundle:Scripts:fadeAlert.html.twig' %}
{% endblock javascripts %}

