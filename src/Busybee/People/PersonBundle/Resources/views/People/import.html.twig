{# src/Busybee/PersonBundle/Resources/views/Person/index.html.twig #}

{% trans_default_domain "BusybeePersonBundle" %}

{% extends "BusybeeHomeBundle:Default:template.html.twig" %}

{% block title %}{{ parent() }}{{ 'people.import.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'people.import.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'people.import.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
    {{ form_start(form) }}
    {% set h3Content = returnButton({'windowOpen': {'route': path('person_manage')}}) %}
    {% set h3Content = h3Content ~ uploadButton() %}
    {% include '@BusybeeHome/Page/panelStart.html.twig' with {'header': 'people.import.title', 'transDomain': 'BusybeePersonBundle'} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 well">
                {{ form_row(form.importFile) }}
            </div>
        </div>
    </div>
    {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include 'BusybeeHomeBundle:Scripts:fadeAlert.html.twig' %}
{% endblock javascripts %}

