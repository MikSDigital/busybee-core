{% trans_default_domain "BusybeeTimeTableBundle" %}

{% block tt_line_label %}{% endblock %}
{% block tt_line_errors %}{% endblock %}

{% block tt_line_widget %}
    {% spaceless %}
        {% set panelStyle = 'warning' %}
        {% set transDomain = 'BusybeeTimeTableBundle' %}
        {% set header = 'timetable.line.activitygroup.header' %}

        {% set h3Content = '<div class="collection-actions collection-panel">' %}
        {% set h3Content = h3Content ~ deleteButton({'title': 'timetable.line.activitygroup.remove', 'transDomain': 'BusybeeTimeTableBundle', 'class': 'halflings halflings-erase btn btn-warning collection-remove collection-action', 'style': 'float: right;', 'collectionName': 'activityGroup'})|raw %}
        {% set h3Content = h3Content ~ saveButton()|raw %}
        {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
        {% set h3Content = h3Content ~ upDownButton({'collectionName': 'activityGroup'})|raw %}
        {% set h3Content = h3Content ~ '</div>' %}
        {% set count = 'New' %}
        {% if name != '__name__' %}{% set count = intVal(name) + 1 %}{% endif %}
        {% include '@BusybeeForm/Page/panelStart.html.twig' with {'name': count} %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 well">
                    {{ form_row(form) }}
                </div>
            </div>
        </div>
        {% include '@BusybeeForm/Page/panelEnd.html.twig' %}
    {% endspaceless %}
{% endblock tt_line_widget %}