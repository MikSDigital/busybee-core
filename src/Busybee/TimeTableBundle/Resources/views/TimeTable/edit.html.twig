{# src/Busybee/CurriculumBundle/Resources/views/Course/edit.html.twig #}

{% trans_default_domain "BusybeeTimeTableBundle" %}

{% extends "BusybeeHomeBundle:Default:template.html.twig" %}

{% form_theme form 'BusybeeFormBundle:Template:bootstrap.html.twig'
'@BusybeeForm/Template/jquery.collection.html.twig'
'BusybeeTimeTableBundle:ActivityGroups:activityGroupsCollection.html.twig' %}

{% block title %}{{ parent() }}{{ 'timetable.edit.title'|trans({'%name%': form.vars.value.getFullName}) }}{% endblock title %}
{% block headerTitle %}{{ 'timetable.edit.title'|trans({'%name%': form.vars.value.getFullName}) }}{% endblock headerTitle %}
{% block headerLead %}{{ 'timetable.edit.description'|trans }}{% endblock headerLead %}


{% block contentContainer %}
    {{ form_start(form) }}
    {% set h3Content = returnButton({'windowOpen': {'route': path('timetable_manage', {'currentSearch': currentSearch})}}) %}
    {% if app.request.attributes.get('id') != 'Add' %}{% set h3Content = h3Content ~ addButton({'windowOpen': {'route': path('timetable_edit', {'id': 'Add', 'currentSearch': currentSearch}) }}) %}{% endif %}
    {% set h3Content = h3Content ~ resetButton({'type': 'button', 'windowOpen': {'route': path('timetable_edit', {'id': app.request.get('id'), 'currentSearch': currentSearch})}}) %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% include '@BusybeeHome/Page/panelStart.html.twig' with {'header': 'timetable.edit.title', 'transDomain': 'BusybeeTimeTableBundle', 'panelParagraph': 'timetable.edit.description', 'name': form.vars.value.getFullName} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 well">
                {{ form_row(form.name) }}
            </div>
            <div class="col-sm-3 well">
                {{ form_row(form.nameShort) }}
            </div>
            <div class="col-sm-3 well">
                {% set data = form.year.vars.value %}
                {% if data is empty %}{% set data = form.year.vars.data %}{% endif %}
                {{ form_row(form.year, {'value': data}) }}
            </div>
        </div>
    </div>
    {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
    {{ parent() }}
    {% include '@BusybeeForm/Scripts/jquery.collection.js.html.twig' %}
{% endblock javascripts %}