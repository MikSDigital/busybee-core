{% trans_default_domain "BusybeeTimeTableBundle" %}

{% block tt_period_label %}{% endblock %}
{% block tt_period_errors %}{% endblock %}

{% block tt_period_widget %}
    {% spaceless %}
        {% set panelStyle = 'default' %}
        {% set transDomain = 'BusybeeTimeTableBundle' %}
        {% set header = 'timetable.column.header.title' %}
        {% set h3Content = '<div class="collection-actions collection-panel">' %}
        {% set period_id = 0 %}
        {% if form.vars.data is not empty %}{% set period_id = form.vars.data.id %}{% endif %}
        {% set h3Content = h3Content ~ deleteButton({'title': 'timetable.period.remove.title', 'transDomain': 'BusybeeTimeTableBundle', 'class': 'halflings halflings-erase btn btn-warning collection-remove collection-action', 'style': 'float: right;', 'javascript': {'function': 'return removePeriod', 'options': [period_id, form.parent.parent.vars.name, app.request.get('currentSearch')]}})|raw %}
        {% set h3Content = h3Content ~ saveButton()|raw %}
        {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
        {% set h3Content = h3Content ~ upDownButton()|raw %}
        {% set h3Content = h3Content ~ '</div>' %}
        {% set title = 'timetable.period.add.title'|trans %}
        {% if form.vars.data is not empty %}{% set title = form.vars.data.name ~ ' (' ~ form.vars.data.nameShort ~ ')' %}{% endif %}
        {% include '@BusybeeHome/Page/panelStart.html.twig' with {'name': title} %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-4 well">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-sm-2 well">
                    {{ form_row(form.nameShort) }}
                </div>
                <div class="col-sm-3 well">
                    {{ form_row(form.start) }}
                </div>
                <div class="col-sm-3 well">
                    {{ form_row(form.end) }}
                    {{ form_widget(form.column) }}
                </div>
            </div>
        </div>
        {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
    {% endspaceless %}
{% endblock tt_period_widget %}
