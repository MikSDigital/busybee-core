{% trans_default_domain "BusybeeTimeTableBundle" %}
{% if form.activities is defined %}
<script type="text/javascript">
    $(".activityList").collection({
        name_prefix: '{{ form.activities.vars.full_name }}',
        allow_up: false,
        allow_down: false,
        add: '<button title="{{ 'activity.title.add'|trans }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
        remove: '<button title="{{ 'activity.title.remove'|trans }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
        add_at_the_end: true,
    });
</script>
{% endif %}
