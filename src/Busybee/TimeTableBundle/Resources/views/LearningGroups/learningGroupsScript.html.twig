{% trans_default_domain "BusybeeTimeTableBundle" %}

{% for line in form.lines %}
<script type="text/javascript">
    $(".learningGroupsList").collection({
        name_prefix: '{{ line.learningGroups.vars.full_name }}',
        allow_up: false,
        allow_down: false,
        add: '<button title="{{ 'timetable.line.learninggroup.add'|trans }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
        remove: '<button title="{{ 'timetable.line.learninggroup.remove'|trans }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
        add_at_the_end: true
    });
</script>
{% endfor %}