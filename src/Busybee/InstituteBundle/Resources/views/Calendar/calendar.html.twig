{# src/Busybee/InstituteBundle/Resources/views/Calendar/calendar.html.twig #}

{% trans_default_domain "BusybeeInstituteBundle" %}

{% set flashClass = 'fadeAlert' %}
{% set transDomain = 'BusybeeInstituteBundle' %}

{% extends "BusybeeHomeBundle:Default:template.html.twig" %}

{% form_theme form
'BusybeeFormBundle:Template:jquery.collection.html.twig'
'@BusybeeInstitute/Calendar/term.html.twig'
'BusybeeFormBundle:Template:bootstrap.html.twig' %}

{% block title %}{{ parent() }}{{ 'calendar.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'calendar.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'calendar.description'|trans }}{% endblock headerLead %}

{% block stylesheets %}
    {{ parent() }}
    {% include '@BusybeeHome/Scripts/jquery.html.twig' %}
{% endblock stylesheets %}

{% set tabs = get_parameter('calendar') %}

{% block contentContainer %}
{{ all_form_errors(fullForm, "div", "alert alert-danger fadeAlert") }}
{{ form_start(form, {'action': path('year_edit', {'id': id} ) } ) }}
<div id="calendarTabs">
	<ul class="nav nav-tabs" role="tablist">
		{% for name,tab in tabs %}
			{% set translation = 'BusybeeInstituteBundle' %}
			{% if tab.translation is defined %}{% set translation = tab.translation %}{% endif %}
			<li><a href="#{{ name }}" role="tab" data-toggle="tab">{{ tab.label|trans({}, translation) }}</a></li>
		{% endfor %}
	</ul>
	{% set active = ' active' %}
	<div class="tab-content">
		{% for name,tab in tabs %}
            {% set translation = 'BusybeeInstituteBundle' %}
			{% if tab.translation is defined %}{% set translation = tab.translation %}{% endif %}
			<div class="tab-pane{{ active }}" id="{{ name }}" >
				{% if tab.message is defined %}
				<div class="container-fluid">
					<div class='row' id="{{ tab.message }}" style="display: none;">
					</div>
				</div>
				{% endif %}
				{% include(tab.include) %}
			</div>
			{% set active = '' %}
		{% endfor %}
	</div>
</div>
{{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
	{{ parent() }}
    {% include "BusybeeFormBundle:Scripts:jquery.collection.js.html.twig" %}
    <script type="text/javascript">
		function confirmDayDelete(delUrl) {
			if (confirm("{{ 'specialDay.delete.confirm'|trans }}")) {
				document.location = delUrl;
			}
		}
		function confirmTermDelete(delUrl) {
			if (confirm("{{ 'term.delete.confirm'|trans }}")) {
				document.location = delUrl;
			}
		}

		if ( $(".fadeAlert").length ) {
 	   		$(".fadeAlert").fadeOut(3000);
		}


        $(".termList").collection({
            name_prefix: '{{ form.terms.vars.full_name }}',
            allow_up: false,
            allow_down: false,
            add: '<button title="{{ 'year.term.add'|trans({}, 'BusybeeInstituteBundle') }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
            remove: '<button title="{{ 'year.term.remove'|trans({}, 'BusybeeInstituteBundle') }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
            add_at_the_end: true
        });

        $(".specialDayList").collection({
            name_prefix: '{{ form.specialDays.vars.full_name }}',
            allow_up: false,
            allow_down: false,
            add: '<button title="{{ 'year.specialday.add'|trans({}, 'BusybeeInstituteBundle') }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
            remove: '<button title="{{ 'year.specialday.remove'|trans({}, 'BusybeeInstituteBundle') }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
            add_at_the_end: true
        });

        $(".studentYearList").collection({
            name_prefix: '{{ form.studentYears.vars.full_name }}',
            allow_up: true,
            allow_down: true,
            add: '<button title="{{ 'year.studentyear.add'|trans({}, 'BusybeeInstituteBundle') }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
            remove: '<button title="{{ 'year.studentyear.remove'|trans({}, 'BusybeeInstituteBundle') }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
            add_at_the_end: true
        });

    </script>
{% endblock javascripts %}