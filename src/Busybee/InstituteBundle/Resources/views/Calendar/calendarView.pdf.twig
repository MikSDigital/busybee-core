{# src/Busybee/InstituteBundle/Resources/views/Calendar/calendarView.pdf.twig #}
{% trans_default_domain "BusybeeInstituteBundle" %}
<style>
.days>td {
	border: 1px solid #333;
}
.termBreak {
	background-color: rgba(128,128,0,0.5);
	text-align: center;
}
.isClosed {
	background-color: lightsalmon ;
	background-image: url({{ asset('img/isClosed.png') }});
	background-repeat: repeat ;
	font-weight: bold;
	text-align: center;
}
.isSpecial {
	background-color: cyan ;
	background-image: url({{ asset('img/isSpecial.png') }});
	background-repeat: repeat ;
	font-weight: bold;
	text-align: center;
}
.calendarMonth {
	border: 1px solid #333;
	border-radius: 12px;
}
.monthView {
	width: 100%
}
.text-right {
	text-align: right;
}
.calendarBody {
	background-position: center  ;
	background-repeat: no-repeat ;
	background-size: 400px ;
	background-image: url({{ asset(get_setting('Org.Logo.Transparent', 'img/bee-transparent.png')) }}) ;
	border: none ;
	margin: 0 auto ;
}
.calendarWeek>td {
	border: 1px solid #333;
	text-align: center;
	font-size: 10px ;
	width: 12.5%;
}
.noBorder {
	border: none!important ;
}
.dayDescription {
	border: 1px solid #333 ;
	border-radius: 12px ;
	padding: 8px 5px ;
	font-size: 10px ;
}
.dayBold {
	font-weight: bold;
	font-size: 12px;
}
th {
	max-height: 25px;
	height: 25px;
}
tr {
	vertical-align: top ;
}
#page {
	text-align: center ;
}
</style>
<div id="page">
	{% set row = 1 %}
	<h3 style="text-align: center; ">{{ get_setting('Org.Name') }} {{ year.name }}</h3>
	<table class="calendarBody">
	<tbody>
	{% for month in calendar.months %} 
		{% if row == 1 %}<tr>
		{% endif %}
			<td class="calendarMonth">
				<table class="monthView">
					<thead>
					<tr>
						<th colspan="8">
							{{ month.fullName|trans }}
						</th>
					</tr>
					</thead>
					<tbody class="days">
					<tr class="calendarWeek">
						<td><strong>{{ 'Wk'|trans }}</strong></td>
						{% for week_name in calendar.weekShortNames %}
							<td class="dayBold">
								{{ week_name|trans }}
							</td>
						{% endfor %}
					</tr>
				{% for week in month.weeks %} 
					<tr class="calendarWeek">
						<td class="dayBold">
							{{ week.number }}
						</td>
						{% for day in week.days %}
							{% if day.inMonth(month) %}
								<td{{ get_dayClass(day)|raw }}{% if day.prompt is not empty %} title="{{ day.prompt }}"{% endif %}>
								{{ day.date | date('j') }}
							</td>
							{% else %}
							<td class="noBorder">
								&nbsp;
							</td>
							{% endif %}
						{% endfor %}
					</tr>   
				{% endfor %}
				{% if month.weeks|length < 6 %}<tr></tr>{% endif %}
				{% if month.weeks|length < 5 %}<tr></tr>{% endif %}
				</tbody>
				</table>
			</td>
		{% if row == 4 %}	
			</tr>
			{% set row = 0 %}
		{% endif %}
		{% set row = row + 1 %}
	{% endfor %}
	{% set row = 1 %}
	{% for day in year.specialDays %}
	{% if row == 1 %}<tr>{% endif %}
	<td class="dayDescription">
		{{ day.day|date('D j/M') }}: {{ day.name }}
	</td>
	{% if row == 4 %}	
	</tr>
	{% set row = 0 %}
	{% endif %}
	{% set row = row + 1 %}
	{% endfor %}
	{% if row > 1 %}</tr>{% endif %}
	<tr>
		<td class="termBreak dayDescription">
			Term Break
		</td>
		<td class="isClosed dayDescription">
			Closed
		</td>
		<td class="isSpecial dayDescription">
			Special
		</td>
		<td class="text-right dayDescription">
			{{ 'Generated by Busybee'|trans({}, 'BusybeeHomeBundle') }}
		</td>
	</tr>
	</tbody></table>
</div>
