{# src/Busybee/InstituteBundle/Resources/views/Calendar/specialDay.html.twig #}

{% trans_default_domain "BusybeeInstituteBundle" %}

{% block specialday_label %}{% endblock %}
{% block specialday_errors %}{% endblock %}

{% block specialday_widget %}
    {% if form.name.vars.value is empty %}{% set panelTitle = 'calendar.specialDay.add'|trans %}{% else %}{% set panelTitle = form.name.vars.value %}{% endif %}
    {% set h3Content = '<div class="collection-actions">' %}
    {% set h3Content = h3Content ~ deleteButton({'title': 'specialDay.delete.title', 'transDomain': 'BusybeeInstituteBundle', 'class': 'halflings halflings-erase btn btn-warning collection-remove collection-action', 'style': 'float: right; margin-top: -28px;'}) %}
    {% set h3Content = h3Content ~ '</div>' %}
    {% include '@BusybeeHome/Page/panelStart.html.twig' with {'header': panelTitle, 'panelStyle': 'info', 'transDomain': 'BusybeeInstituteBundle'} %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3 well">
                {{ form_row(form.day) }}
			</div>
			<div class="col-sm-2 well">
                {{ form_row(form.type) }}
			</div>
			<div class="col-sm-2 well">
                {{ form_row(form.name) }}
			</div>
			<div class="col-sm-5 well">
                {{ form_row(form.year) }}
                {{ form_row(form.description) }}
			</div>
		</div>
        {% set displayType = 'none' %}
        {% if form.type.vars.value == 'alter' %}{% set displayType = 'flex' %}{% endif %}
		<div class="row alterTime{{ form.vars.name }}" style="display: {{ displayType }}">
			<div class="col-sm-3 well">
                {{ form_row(form.open) }}
			</div>
			<div class="col-sm-3 well">
                {{ form_row(form.start) }}
			</div>
			<div class="col-sm-3 well">
                {{ form_row(form.finish) }}
			</div>
			<div class="col-sm-3 well">
                {{ form_row(form.close) }}
				</div>
			</div>
		</div>
    {% include '@BusybeeInstitute/Calendar/specialDay.js.twig' with {'name': form.vars.name} %}
    {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
{% endblock specialday_widget %}