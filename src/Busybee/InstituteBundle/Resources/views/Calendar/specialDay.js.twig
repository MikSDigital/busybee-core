{% trans_default_domain "BusybeeInstituteBundle" %}

<script>
	if ( $(".fadeAlert{{ name }}").length ) {
		$(".fadeAlert{{ name }}").fadeOut(3000);
	}
	$('.alterType{{ name }}').change(function($e) {
		var value = $(this).val();
		if (value == 'alter') {
			$('.alterTime{{ name }}').fadeIn(200);
		} else {
			$('.alterTime{{ name }}').fadeOut(200);
		}
	});
	var value = $('.alterType{{ name }}').val(); 		
	if (value == 'alter') {
		$('.alterTime{{ name }}').fadeIn(200);
	}
</script>
