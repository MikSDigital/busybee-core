{# src/Busybee/InstituteBundle/Resources/views/Calendar/year.html.twig #}

{% trans_default_domain "BusybeeInstituteBundle" %}

{% form_theme form "BusybeeFormBundle:Template:bootstrap.html.twig" %}

<div class="panel panel-primary busybee-panel">
	<div class="panel-heading">
		<h3 class="panel-title">{{ 'calendar.year.title'|trans}}
		{% include 'BusybeeInstituteBundle:Calendar:calendarMenu.html.twig' %}
		</h3>
	</div>
	<div class="panel-body">
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-3 well">
					{{ form_row(form.name) }}
				</div>
				<div class="col-sm-3 well">
					{{ form_row(form.firstDay) }}
				</div>
				<div class="col-sm-3 well">
					{{ form_row(form.lastDay) }}
				</div>
				<div class="col-sm-3 well">
					{{ form_row(form.status) }}
				</div>
			</div>
		</div>
		{% include 'BusybeeInstituteBundle:Calendar:calendarMenu.html.twig' %}
	</div>
</div>
