{# src/Busybee/InstituteBundle/Resources/views/Calendar/studentYear.html.twig #}

{% trans_default_domain "BusybeeInstituteBundle" %}

{% block studentyear_label %}{% endblock %}
{% block studentyear_errors %}{% endblock %}

{% block studentyear_widget %}
    {% if form.name.vars.value is empty %}{% set panelTitle = 'calendar.studentyear.add'|trans %}{% else %}{% set panelTitle = form.name.vars.value %}{% endif %}
    {% set h3Content = '<div class="collection-actions collection-panel">' %}
    {% set h3Content = h3Content ~ deleteButton({'title': 'studentyear.delete.title', 'transDomain': 'BusybeeInstituteBundle', 'class': 'halflings halflings-erase btn btn-warning collection-remove collection-action', 'style': 'float: right;'}) %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% set h3Content = h3Content ~ upDownButton() %}
    {% set h3Content = h3Content ~ '</div>' %}

    {% include '@BusybeeHome/Page/panelStart.html.twig' with {'header': panelTitle, 'panelStyle': 'info', 'transDomain': 'BusybeeInstituteBundle'} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 well">
                {{ form_row(form.name) }}
            </div>
            <div class="col-sm-4 well">
                {{ form_row(form.nameShort) }}
            </div>
            {{ form_row(form.year) }}
            {{ form_row(form.sequence) }}
        </div>
    </div>
    {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
{% endblock studentyear_widget %}