{# src/Busybee/InstituteBundle/Resources/views/CampusresourceEdit.html.twig #}

{% trans_default_domain "BusybeeInstituteBundle" %}

{% extends "BusybeeHomeBundle:Default:template.html.twig" %}

{% block title %}{{ parent() }}{{ 'campus.resource.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'campus.resource.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'campus.resource.description'|trans }}{% endblock headerLead %}

{% block contentContainer %}
{{ form_start(form) }}
<div class="panel panel-primary busybee-panel">
	<div class="panel-heading">
		<h3 class="panel-title">{{ 'campus.resource.title'|trans}}
			<button title='{{ 'campus.resources.title'|trans}}' type="button" class="formChanged halflings halflings-hand-left btn btn-primary" onClick="window.open('{{ path('campus_resource_manage') }}','_self')" style="float: right"></button>
			{%  if id != 'Add' %}
			<button title="{{ 'campus.resource.add.title'|trans}}" type="button" style="float: right;" class="formChanged halflings halflings-plus-sign btn btn-primary" onClick="window.open('{{ path('campus_resource_edit', {'id': 'Add'}) }}','_self')"></button>{% endif %}
			<button title="{{ 'form.save'|trans({}, 'BusybeeHomeBundle')}}" type="submit" style="float: right;" class="halflings halflings-save btn btn-success"></button>
			{{ form_row(form.changeRecord) }}
		</h3>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.name) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.type) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.campus, {'value': form.campus.vars.data }) }}
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.staff1, {'value': form.staff1.vars.data }) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.staff2, {'value': form.staff2.vars.data }) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
				<div class="form-group text-right">
                    {{ form_widget(form.save) }}
                    {{ form_widget(form.cancel) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.capacity) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.studentComputers) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.computer) }}
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.projector) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.tv) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.dvd) }}
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.hifi) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.speakers) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.iwb) }}
			</div>
		</div>

		<div class="row">
			<div class="col-sm-6 col-md-6 well">
				{{ form_row(form.comment) }}
			</div>
			<div class="col-sm-4 col-md-4 well">
                {{ form_row(form.phoneExt) }}
			</div>
			<div class="col-sm-2 col-md-2 well">
                {{ form_row(form.phoneInt) }}
			</div>
		</div>
	</div>
</div>

{{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
	<script type="text/javascript" src="{{ asset('js/bootstrap-checkbox.min.js') }}"></script>
	<script>
        $(".yes-no").checkboxpicker({
            iconCls: "glyphicons"
        });
	</script>
	{% include 'BusybeeHomeBundle:Scripts:monitorForm.js.twig' with {'route': 'campus_resource_edit'} %}
{% endblock javascripts %}