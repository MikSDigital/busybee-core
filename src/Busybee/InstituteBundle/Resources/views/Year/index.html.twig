{# src/Busybee/InstituteBundle/Resources/views/Year/index.html.twig #}

{% trans_default_domain "BusybeeInstituteBundle" %}

{% extends "BusybeeHomeBundle:Default:template.html.twig" %}

{%  if form.vars.value.id != 'Add' %}
    {% set title = 'groups.year.edit.title' %}
    {% set description = 'groups.year.edit.description' %}
{% else %}
    {% set title = 'groups.year.add.title' %}
    {% set description = 'groups.year.add.description' %}
{% endif %}

{% block title %}{{ parent() }}{{ title|trans }}{% endblock title %}
{% block headerTitle %}{{ title|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ description|trans }}{% endblock headerLead %}

{% block contentContainer %}
{{ form_start(form) }}
    {% set h3Content = addButton({'windowOpen': {'route': path('student_year_edit', {'id': 'Add'})}}) %}
    {% include '@BusybeeHome/Page/panelStart.html.twig' with {'header': 'groups.year.title', 'transDomain': 'BusybeeInstituteBundle'} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-md-4 well">
                {{ form_row(form.name) }}
            </div>
            <div class="col-sm-2 col-md-2 well">
                {{ form_row(form.nameShort) }}
            </div>
            <div class="col-sm-2 col-md-2 well">
                {{ form_row(form.sequence) }}
            </div>
            <div class="col-sm-4 col-md-4 well">
                <div class="form-group text-right">
                    {{ form_widget(form.save) }}
                    {{ form_widget(form.cancel) }}
                </div>
            </div>
        </div>
    </div>
    {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
{{ form_end(form) }}
{% endblock contentContainer %}


{% block javascripts %}
	{{ parent() }}
{% endblock javascripts %}