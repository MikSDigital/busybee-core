{% trans_default_domain "BusybeeInstituteBundle" %}

<script type="text/javascript" language="JavaScript">
    $(".gradeList").collection({
        name_prefix: '{{ form.grades.vars.full_name }}',
        allow_up: true,
        allow_down: true,
        add: '<button title="{{ 'grade.add.title'|trans() }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
        remove: '<button title="{{ 'grade.remove.title'|trans() }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
        add_at_the_end: true
    });
    {% for error in form.vars.errors %}
    {% if error.messageTemplate in ['year.grade.error.duplicate', 'year.grade.error.delete'] %}
    $("#gradeMessage").html('<p class="alert alert-danger">{{ error.message }}</p>');
    $("#gradeMessage").fadeIn(1000);
    {% endif %}
    {% endfor %}
</script>
