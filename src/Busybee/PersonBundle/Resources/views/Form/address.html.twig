{# src/Busybee/PersonBundle/Resources/views/Form/person.html.twig #}

{% trans_default_domain "BusybeePersonBundle" %}

{% form_theme form "BusybeeFormBundle:Template:bootstrap.html.twig" %}

{% set addressName = form.propertyName.parent.vars.name %}

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6 well">
			{{ form_row(form.propertyName) }}
		</div>
		<div class="col-sm-6 well">
			{{ form_row(form.streetName) }}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 well">
			{{ form_row(form.locality) }}
		</div>
	</div>
</div>
