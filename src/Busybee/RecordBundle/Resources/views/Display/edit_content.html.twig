{# src/Busybee/DatabaseBundle/Resources/views/Table/edit_content.html.twig #}

{% trans_default_domain 'BusybeeDatabaseBundle' %}


<div class="container">
	<div class="row">
		<div class="col-md-12 ">
			<div class="row">
				{% for element in form %}
					{% if element.vars.name not in record.control|keys %}
						{% if element.vars.block_prefixes.1 == 'hidden' %}
								{{ form_row(element) }}
						{% else %}
							<div class="col-sm-12 well">
								<div class="form-actions">
									{{ form_row(element) }}
								</div>
							</div>
						{% endif %}
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-sm-12 well">
					<div class="form-actions text-center">
						{% if form.save is defined %}{{ form_widget(form.save) }}{% endif %}
						{% if form.save_and_add is defined %}{{ form_widget(form.save_and_add) }}{% endif %}
						{% if form.delete is defined %}{{ form_widget(form.delete) }}{% endif %}
						{% if form.cancel is defined %}{{ form_widget(form.cancel) }}{% endif %}
						{% if form._token is defined %}{{ form_widget(form._token) }}{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>