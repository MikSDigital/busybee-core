{# src/General/SecurityBundle/Resources/views/User/register_content.html.twig #}
{% trans_default_domain 'BusybeeSecurityBundle' %}

<div class="row marketing">
	<div class="col-lg-12">
		<div class="well row">
			{{ form_row(form.email) }}
		</div>
		<div class="well row">
			{{ form_row(form.username) }}
		</div>

		<div class="well row">
				{{ form_row(form.enabled) }}
		</div>


		<div class="well row">
			{{ form_row(form.plainPassword) }}
		</div>
		<div class="well row">
			{{ form_row(form.groups) }}
		</div>
		<div class="well row">
			{{ form_row(form.directroles) }}
		</div>
		<div class="well text-center row">
			{{ form_widget(form.register) }}
			{{ form_widget(form.cancel) }}
		</div>
	</div>
</div>	
