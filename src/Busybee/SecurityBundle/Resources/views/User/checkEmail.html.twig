{% extends "BusybeeSecurityBundle::layout.html.twig" %}

{% trans_default_domain 'BusybeeSecurityBundle' %}
{% block title %}{{ parent() }}{{ 'security.resetting.title'|trans }}{% endblock title %}
{% block titleBlock %}
<div class="jumbotron">
	<h1>{{ 'security.resetting.title'|trans }}</h1>
</div>
{% endblock titleBlock %}
{% block SecurityBundleContent %}
<div class="row marketing">
	<div class="col-lg-12 alert alert-success">
		<p class="lead">{{ 'security.resetting.check_email'|trans({'%email%': email}) }}</p>
	</div>
</div>
{% endblock SecurityBundleContent %}
