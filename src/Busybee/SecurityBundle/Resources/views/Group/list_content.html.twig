{# src/General/SecurityBundle/Resources/views/Group/list_content.html.twig #}
{% trans_default_domain 'BusybeeSecurityBundle' %}

	<div class="row marketing">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>{{ 'group.label.name'|trans }}</th>
					<th>{{ 'group.label.roles.assigned'|trans }}</th>
					<th>{{ 'group.label.roles.applied'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for group in groups %}
				<tr>
					<td><a href="{{ path('busybee_security_group_edit', {'GroupID': group.getId()} ) }}"><span class="glyphicon glyphicon-pencil"></span> {{ group.getGroupname() }}</a></td>
					<td>{% for role in group.roles %}
						<p class="small">{{ role.getRole() }}</p>
						{% endfor %}</td>
					<td>{% for role in group.roles %}
						{% for name in hierarchy[role.getRole()] %}
							<p class="small">{{ name }}</p>
						{% endfor %}  
					{% endfor %}</td>
				</tr>
				{% endfor %}
				<tr>
					<td col="3"><a class="btn btn-primary" href="{{ path('busybee_security_group_new') }}" role="button">{{ 'group.list.create'|trans }}</a></td>
				</tr>
			</tbody>
		</table>  
	</div>

