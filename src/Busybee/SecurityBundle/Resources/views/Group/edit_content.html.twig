{# src/General/SecurityBundle/Resources/views/Group/edit_content.html.twig #}

{% trans_default_domain 'BusybeeSecurityBundle' %}

{% block flashMessages %}{% endblock flashMessages %}


<div class="row marketing">
    <div class="col-lg-12">
        {{ form_start(form) }}
        <div class="row well">
			{{form_row(form.groupname) }}
        </div>
        <div class="row well">
            {{ form_row(form.roles) }}
        </div>
        <div class="form-group well text-center">
            {{ form_widget(form.save) }}
            {{ form_widget(form.save_and_add) }}
            {% if form.delete is defined %}{{ form_widget(form.delete) }}{% endif %}
            {{ form_widget(form.cancel) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
