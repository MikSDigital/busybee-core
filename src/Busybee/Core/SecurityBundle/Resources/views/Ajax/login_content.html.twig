{# src/Busybee/Core/SecurityBundle/Resources/views/Ajax/login_content.html.twig #}

{% trans_default_domain 'BusybeeSecurityBundle' %}


<div class="container">


    {% block flashMessages %}
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}

                    <div class="row marketing">
                        <div class="col-lg-12">
                            <div class="alert alert-{{ type }}">
                                {{ message }}
                            </div>
                        </div>
                    </div>

                {% endfor %}
            {% endfor %}
        {% endif %}
    {% endblock flashMessages %}


    <div class="row">
        <div class="col-md-12 text-center">
            <a class="btn btn-warning" href="{{ redirect }}" role="button">{{ 'security.login.submit'|trans }}</a>
        </div>
    </div>
</div>
