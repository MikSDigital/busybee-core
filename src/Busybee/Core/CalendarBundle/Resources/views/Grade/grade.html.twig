{% trans_default_domain "BusybeeCalendarBundle" %}

{% block grade_label %}{% endblock %}
{% block grade_errors %}{% endblock %}

{% block grade_widget %}
    {% spaceless %}
        {% if form.grade.vars.value is empty %}{% set gradeTitle = 'grade.add.title'|trans %}{% else %}{% set gradeTitle = get_setting('student.groups._flip')[form.grade.vars.value] %}{% endif %}
        {% set h3Content = '<div class="collection-actions collection-panel">' %}
        {% if manager.isStudentInstalled and value is not null %}
            {% set h3Content = h3Content ~ editButton({title: 'student.grade.manage', transDomain: 'BusybeeStudentBundle', windowOpen: {route: path('student_add_to_grade', {id: value.id})}}) %}
        {% endif %}
        {% set h3Content = h3Content ~ deleteButton({'title': 'grade.remove.title', 'transDomain': 'BusybeeCalendarBundle', 'class': 'halflings halflings-erase btn btn-warning collection-remove collection-action', 'style': 'float: right;'}) %}
        {% set h3Content = h3Content ~ saveButton({'name': 'grades'}) %}
        {% set h3Content = h3Content ~ '<span style="float: right;">&nbsp;</span>' %}
        {% set h3Content = h3Content ~ upDownButton()|raw %}
        {% set h3Content = h3Content ~ '</div>' %}
        {% include '@BusybeeTemplate/Page/panelStart.html.twig' with {'header': gradeTitle, 'panelStyle': 'info'} %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 well">
                    {{ form_row(form.grade) }}
                    {{ form_row(form.sequence) }}
                    {{ form_row(form.year, {'value': app.request.get('id') }) }}
                    {{ form_row(form.name) }}
                </div>
            </div>
        </div>
        {% include '@BusybeeTemplate/Page/panelEnd.html.twig' %}
    {% endspaceless %}
{% endblock grade_widget %}
