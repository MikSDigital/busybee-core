{% trans_default_domain "BusybeeCalendarBundle" %}


{% set flashClass = 'fadeAlert' %}
{% set transDomain = 'BusybeeCalendarBundle' %}

{% extends "@BusybeeTemplate/Default/template.html.twig" %}

{% block title %}{{ parent() }}{{ 'grade.header.label'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'grade.header.label'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'grade.header.description'|trans }}{% endblock headerLead %}


{% block contentContainer %}
    {{ form_start(form) }}
    {% set h3Content = saveButton()|raw %}
    {% include '@BusybeeTemplate/Page/panelStart.html.twig' with {header: 'grade.header.label'} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 well">
                {{ form_row(form.grade) }}
            </div>
            <div class="col-sm-4 well">
                {{ form_row(form.website) }}
            </div>
            {% if form.space is defined %}
                <div class="col-sm-4 well">
                    {% set tValue = form.space.vars.value %}
                    {% if tValue is empty %}
                        {% set tValue = form.space.vars.data %}
                    {% endif %}
                    {{ form_row(form.space, {value: tValue}) }}
                </div>
            {% endif %}
        </div>
        {% if form.tutor1 is defined %}
            <div class="row">
                <div class="col-sm-4 well">
                    {% set tValue = form.tutor1.vars.value %}
                    {% if tValue is empty %}
                        {% set tValue = form.tutor1.vars.data %}
                    {% endif %}
                    {{ form_row(form.tutor1, {value: tValue}) }}
                </div>
                <div class="col-sm-4 well">
                    {% set tValue = form.tutor2.vars.value %}
                    {% if tValue is empty %}
                        {% set tValue = form.tutor2.vars.data %}
                    {% endif %}
                    {{ form_row(form.tutor2, {value: tValue}) }}
                </div>
                <div class="col-sm-4 well">
                    {% set tValue = form.tutor3.vars.value %}
                    {% if tValue is empty %}
                        {% set tValue = form.tutor3.vars.data %}
                    {% endif %}
                    {{ form_row(form.tutor3, {value: tValue}) }}
                </div>
            </div>
        {% endif %}
    </div>
    {% include '@BusybeeTemplate/Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}
