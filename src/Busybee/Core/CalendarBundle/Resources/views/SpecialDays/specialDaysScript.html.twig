<script language="JavaScript" type="text/javascript">

    $(".specialDayList").collection({
        name_prefix: '{{ form.specialDays.vars.full_name }}',
        allow_up: false,
        allow_down: false,
        add: '<button title="{{ 'year.specialday.add'|trans({}, 'BusybeeCalendarBundle') }}" type="button" class="halflings halflings-plus-sign btn btn-primary" style="float: right;"></button>',
        remove: '<button title="{{ 'year.specialday.remove'|trans({}, 'BusybeeCalendarBundle') }}" type="button" class="halflings halflings-erase btn btn-warning" style="float: right;"></button>',
        allow_duplicate: true,
        add_at_the_end: true
    });

    {% for error in form.vars.errors %}
    {% if error.messageTemplate in ['year.specialDay.error.delete', 'year.specialDay.error.timeEmpty', 'year.specialDay.error.timeInvalid'] %}
    $("#specialDayMessage").html('<p class="alert alert-danger">{{ error.message }}</p>');
    $("#specialDayMessage").fadeIn(1000);
    {% endif %}
    {% endfor %}

    function removeSpecialDay(id, year) {
        if (id > 0) {
            var path = "{{ path('specialday_delete', {'id': '__id__', 'year': '__year__'}) }}";
            path = path.replace('__id__', id);
            path = path.replace('__year__', year);
            window.open(path, '_self');
        }
    }
</script>