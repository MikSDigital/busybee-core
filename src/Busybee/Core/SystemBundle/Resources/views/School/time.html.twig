{% trans_default_domain "SystemBundle" %}

{% block school_time_label %}{% endblock %}
{% block school_time_errors %}{% endblock %}

{% block school_time_widget %}
    {% spaceless %}
        {% set h3Content = saveButton()|raw %}
        {% include '@BusybeeTemplate/Page/panelStart.html.twig' with {header: 'school.admin.day_time.time.title', name: '', panelStyle: 'default', transDomain: 'SystemBundle'} %}
        <div class="row">
            <div class="col-sm-3 well">{{ form_row(form.open) }}</div>
            <div class="col-sm-3 well">{{ form_row(form.begin) }}</div>
            <div class="col-sm-3 well">{{ form_row(form.finish) }}</div>
            <div class="col-sm-3 well">{{ form_row(form.close) }}</div>
        </div>
        <div class="row alert alert-info">{{ 'school.admin.day_time.time.help'|trans }}</div>

        {% include '@BusybeeTemplate/Page/panelEnd.html.twig' %}
    {% endspaceless %}
{% endblock school_time_widget %}
