{# src/General/SystemBundle/Resources/views/Setting/upload.html.twig #}
{% extends "BusybeeFormBundle:Default:template.html.twig" %}

{% trans_default_domain 'SystemBundle' %}


{% block title %}{{ 'system.upload.title'|trans }}{% endblock title %}
{% block headerTitle %}{{ 'system.upload.title'|trans }}{% endblock headerTitle %}
{% block headerLead %}{{ 'system.upload.description'|trans }}{% endblock headerLead %}

{% block stylesheets %}
    {{ parent() }}
    {% include '@BusybeeForm/Toggle/style.html.twig' %}
{% endblock %}

{% block contentContainer %}
    {% block flashMessages %}{% endblock %}
    {{ form_start(form) }}
    {% set header = 'system.upload.title' %}
    {% set transDomain = 'SystemBundle' %}
    {% set h3Content = uploadButton() %}
    {% include '@BusybeeForm/Page/panelStart.html.twig' %}
    <div class="container-fluid">
        {% include '@BusybeeForm/Default/flash.html.twig' with {'flashClass': 'fadeAlert', 'transDomain': 'SystemBundle'} %}
        <div class="row">
            <div class="col-sm-6 well">
                {{ form_row(form.default) }}
            </div>
            <div class="col-sm-6 well">
                {{ form_row(form.file) }}
            </div>
        </div>
    </div>
    {% include '@BusybeeForm/Page/panelEnd.html.twig' %}
    {{ form_end(form) }}
{% endblock contentContainer %}

{% block javascripts %}
    {{ parent() }}
    {% include '@BusybeeForm/Scripts/fadeAlert.html.twig' %}
    {% include '@BusybeeForm/Toggle/script.html.twig' %}
{% endblock %}


