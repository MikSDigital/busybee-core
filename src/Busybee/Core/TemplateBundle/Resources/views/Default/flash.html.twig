{% if transDomain is not defined %}
    {% set transDomain = 'BusybeeHomeBundle' %}
{% endif %}

{% trans_default_domain transDomain %}

{% if flashClass is defined %}
    {% set flashClass = " " ~ flashClass %}
{% else %}
    {% set flashClass = "" %}
{% endif %}

{% for flashMessage in app.session.flashbag.get('error') %}
    {% include 'BusybeeTemplateBundle:Default:flashSplit.html.twig' with {'theMessage': flashMessage, level: 'danger'} %}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('danger') %}
    {% include 'BusybeeTemplateBundle:Default:flashSplit.html.twig' with {'theMessage': flashMessage, level: 'danger'} %}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('warning') %}
    {% include 'BusybeeTemplateBundle:Default:flashSplit.html.twig' with {'theMessage': flashMessage, level: 'warning'} %}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('info') %}
    {% include 'BusybeeTemplateBundle:Default:flashSplit.html.twig' with {'theMessage': flashMessage, level: 'info'} %}
{% endfor %}

{% for flashMessage in app.session.flashbag.get('success') %}
    {% include 'BusybeeTemplateBundle:Default:flashSplit.html.twig' with {'theMessage': flashMessage, level: 'success'} %}
{% endfor %}
