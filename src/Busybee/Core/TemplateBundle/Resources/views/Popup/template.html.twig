{# src/Busybee/HomeBundle/Resources/views/Popup/template.html.twig #}

{% trans_default_domain "BusybeeHomeBundle" %}

{% extends '@BusybeeTemplate/Default/headerNotice.html.twig' %}

{% block htmlContent %}
    <!DOCTYPE html >
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>{{ get_setting('org.name.long', 'Busybee') }} - {% block title %}{% endblock title %} on Busybee</title>

        {% block stylesheets %}
            {% include 'BusybeeHomeBundle:Popup:style.html.twig' %}
        {% endblock stylesheets %}

    </head>

    <body>

    {% block menuContainer %}
        {% include '@@BusybeeTemplate/Menu/empty-menu.html.twig' %}
    {% endblock menuContainer %}

    <div class="container theme-showcase" role="main">
        <div class="container-fluid" id="contentContainer">
            {% block flashMessages %}
                {% include '@BusybeeTemplate/Default/flash.html.twig' %}
            {% endblock flashMessages %}
            {% block contentContainer %}

                {{ include('@BusybeeTemplate/Default/buttons.html.twig') }}

                {{ include('@BusybeeTemplate/Default/tables.html.twig') }}

                {{ include('@BusybeeTemplate/Default/thumbnails.html.twig') }}

                {{ include('@BusybeeTemplate/Default/labels.html.twig') }}

                {{ include('@BusybeeTemplate/Default/badges.html.twig') }}

                {{ include('@BusybeeTemplate/Default/dropdowns.html.twig') }}

                {{ include('@BusybeeTemplate/Default/navs.html.twig') }}

                {{ include('@BusybeeTemplate/Default/navBars.html.twig') }}

                {{ include('@BusybeeTemplate/Default/alerts.html.twig') }}

                {{ include('@BusybeeTemplate/Default/progressBars.html.twig') }}

                {{ include('@BusybeeTemplate/Default/listGroups.html.twig') }}

                {{ include('@BusybeeTemplate/Default/panels.html.twig') }}

                {{ include('@BusybeeTemplate/Default/wells.html.twig') }}

                {{ include('@BusybeeTemplate/Default/carousel.html.twig') }}

            {% endblock contentContainer %}
        </div>
    </div> <!-- /container -->

    <div class="container theme-showcase" id="footerContainer">
        {% block footerContainer %}
            {{ include('@BusybeeTemplate/Default/footer.html.twig') }}
        {% endblock footerContainer %}
    </div> <!-- /container footer -->


    {% block javascripts %}
        {% include "@BusybeeTemplate/Default/scripts.html.twig" %}
    {% endblock javascripts %}


    </body>
    </html>
{% endblock htmlContent %}
