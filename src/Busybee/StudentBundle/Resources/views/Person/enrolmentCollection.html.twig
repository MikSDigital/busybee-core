{% trans_default_domain "BusybeeFamilyBundle" %}

{% block enrolment_label %}{% endblock %}
{% block enrolment_errors %}{% endblock %}

{% block enrolment_widget %}
    {% set panelStyle = 'info' %}
    {% set transDomain = 'BusybeeStudentBundle' %}
    {% set header = 'student.enrolment.title' %}
    {% set h3Content = '<div class="collection-actions collection-panel">' %}
    {% set h3Content = h3Content ~ deleteButton({'title': 'student.enrolment.remove', 'transDomain': 'BusybeeStudentBundle', 'class': 'halflings halflings-erase btn btn-warning collection-remove collection-action', 'style': 'float: right;'}) %}
    {% set h3Content = h3Content ~ saveButton() %}
    {% set h3Content = h3Content ~ '</div>' %}
    {% set yearName = '' %}
    {% include '@BusybeeHome/Page/panelStart.html.twig' with {'name': yearName} %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 well">
                {{ form_row(form.status) }}
            </div>
            <div class="col-sm-4 well">
                {{ form_row(form.year) }}
            </div>
            <div class="col-sm-4 well">
                {{ form_row(form.grade) }}
            </div>
        </div>
    </div>
    {% include '@BusybeeHome/Page/panelEnd.html.twig' %}
{% endblock enrolment_widget %}